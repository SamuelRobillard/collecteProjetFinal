{
  "openapi": "3.0.0",
  "info": {
    "title": "API Collecte Projet Final",
    "version": "1.0.0",
    "description": "API RESTful pour la gestion des utilisateurs, hôtels, réservations et données associées."
  },
  "servers": [
    {
      "url": "https://collecteprojetfinal.onrender.com/api/v3"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authentification"
    },
    {
      "name": "Users",
      "description": "Utilisateurs"
    },
    {
      "name": "Admin",
      "description": "Administration"
    },
    {
      "name": "Hotels",
      "description": "Hôtels"
    },
    {
      "name": "Bookings",
      "description": "Réservations"
    },
    {
      "name": "CityCodes",
      "description": "Villes"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Connexion utilisateur",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Connexion réussie (JWT)"
          },
          "401": {
            "description": "Identifiants invalides"
          }
        }
      }
    },
    "/register": {
      "post": {
        "summary": "Créer un utilisateur",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Utilisateur créé"
          }
        }
      }
    },
    "/delete": {
      "delete": {
        "summary": "Supprimer son compte",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Utilisateur supprimé"
          },
          "401": {
            "description": "Non authentifié"
          }
        }
      }
    },
    "/admin": {
      "post": {
        "summary": "Créer un administrateur",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Admin créé"
          },
          "403": {
            "description": "Accès interdit"
          }
        }
      }
    },
    "/admin/user/{id}": {
      "delete": {
        "summary": "Supprimer son compte",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Utilisateur supprimé"
          },
          "401": {
            "description": "Non authentifié"
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Lister les utilisateurs",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des utilisateurs"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Récupérer un utilisateur par ID",
        "tags": [
          "Admin"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Utilisateur trouvé"
          },
          "404": {
            "description": "Utilisateur non trouvé"
          }
        }
      }
    },
    "/me": {
      "get": {
        "summary": "Utilisateur connecté",
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Utilisateur courant"
          }
        }
      }
    },
    "/hotels": {
      "get": {
        "summary": "Lister les hôtels",
        "tags": [
          "Hotels"
        ],
        "responses": {
          "200": {
            "description": "Liste des hôtels"
          }
        }
      }
    },
    "/hotels-csv": {
      "get": {
        "summary": "Exporter les hôtels en CSV",
        "tags": [
          "Hotels"
        ],
        "responses": {
          "200": {
            "description": "CSV généré"
          }
        }
      }
    },
    "/hotelsLocationByCity": {
      "get": {
        "summary": "Hôtels par ville",
        "tags": [
          "Hotels"
        ],
        "responses": {
          "200": {
            "description": "Résultats par ville"
          }
        }
      }
    },
    "/hotelsbestratioprice": {
      "get": {
        "summary": "Top hôtels ratio prix",
        "tags": [
          "Hotels"
        ],
        "responses": {
          "200": {
            "description": "Classement"
          }
        }
      }
    },
    "/hotelQuality": {
      "get": {
        "summary": "Lister qualités hôtel",
        "tags": [
          "Hotels"
        ],
        "responses": {
          "200": {
            "description": "Liste des qualités"
          }
        }
      }
    },
    "/booking": {
      "get": {
        "summary": "Réservations utilisateur",
        "tags": [
          "Bookings"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Réservations trouvées"
          }
        }
      },
      "post": {
        "summary": "Créer réservation",
        "tags": [
          "Bookings"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookingCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Réservation créée"
          }
        }
      },
      "delete": {
        "summary": "Supprimer une réservation",
        "tags": [
          "Bookings"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "hotelId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Identifiant de l'hôtel associé à la réservation"
          }
        ],
        "responses": {
          "200": {
            "description": "Réservation supprimée"
          },
          "400": {
            "description": "Paramètre manquant ou invalide"
          },
          "401": {
            "description": "Non authentifié"
          },
          "404": {
            "description": "Réservation non trouvée"
          }
        }
      }
    },
    "/cityuniquename": {
      "get": {
        "summary": "Noms de villes uniques",
        "tags": [
          "CityCodes"
        ],
        "responses": {
          "200": {
            "description": "Noms uniques"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserCreate": {
        "type": "object",
        "required": [
          "firstName",
          "lastName",
          "email",
          "password"
        ],
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 6
          }
        }
      },
      "AdminCreate": {
        "type": "object",
        "required": [
          "firstName",
          "lastName",
          "email",
          "password"
        ],
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 6
          },
          "role": {
            "type": "string"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "BookingCreate": {
        "type": "object",
        "required": [
          "hotelId",
          "startDate",
          "endDate"
        ],
        "properties": {
          "hotelId": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          }
        }
      }
    }
  }
}